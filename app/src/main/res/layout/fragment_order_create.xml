<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp"
              android:orientation="vertical"
              tools:context="com.easydeliver.clientapp.ui.fragment.OrderCreateFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="由"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="left"/>


        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/order_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:text="following"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="到"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="left"/>


        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/order_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:text="following"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="物件 "
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="left"/>


        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/object_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:text="following"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="其他資料"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="left"/>


        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/extra_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:text="following"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="收件人 "
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="left"/>


        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/target_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:text="following"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:gravity="right"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="價錢 "
        android:textColor="@color/primary"
        android:textSize="16dp"
        app:fontFamily="roboto"
        app:textWeight="light"
        android:gravity="left"/>


    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="4dp"
        android:text="following"
        android:textColor="@color/primary"
        android:textSize="16dp"
        app:fontFamily="roboto"
        app:textWeight="light"
        android:gravity="right"/>

    </LinearLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="價錢 "
        android:textColor="@color/primary"
        android:textSize="16dp"
        app:fontFamily="roboto"
        app:textWeight="light"
        android:gravity="left"/>

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:background="@color/primary"
        android:text="即時下單"
        android:textColor="@color/white"
        android:textSize="14sp"

        />




</LinearLayout>
